# Tunisia Intelligence RSS Scraper Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SECRET_KEY=your-secret-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# SECRET MANAGEMENT
# =============================================================================
# Backend options: env, file, azure_kv, aws_sm
SECRETS_BACKEND=env

# For file backend
SECRETS_FILE=secrets.enc
SECRETS_KEY_FILE=secret.key
SECRETS_PASSWORD=your-encryption-password

# For Azure Key Vault backend
AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/

# For AWS Secrets Manager backend
AWS_REGION=us-east-1

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
SCRAPING_MAX_RETRIES=3
SCRAPING_INITIAL_TIMEOUT=60
SCRAPING_RATE_LIMIT_DELAY=1.0
SCRAPING_BATCH_SIZE=100
SCRAPING_MAX_WORKERS=5
SCRAPING_USER_AGENT=Tunisia Intelligence RSS Scraper 1.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=rss_loader.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_ENABLED=true
MONITORING_METRICS_RETENTION_DAYS=30
MONITORING_ALERT_ON_ERRORS=true
MONITORING_ALERT_ERROR_THRESHOLD=5
MONITORING_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# CONTENT PROCESSING CONFIGURATION
# =============================================================================
CONTENT_MIN_TITLE_LENGTH=5
CONTENT_MIN_CONTENT_LENGTH=50
CONTENT_MAX_CONTENT_LENGTH=50000
CONTENT_ENABLE_DEDUPLICATION=true
CONTENT_ENABLE_SENTIMENT_ANALYSIS=false
CONTENT_DEFAULT_LANGUAGE=ar
CONTENT_SUPPORTED_LANGUAGES=ar,fr,en
